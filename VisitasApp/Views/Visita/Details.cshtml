@model VisitasApp.Models.Visita

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalle de la Visita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDocumento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDocumento.ValorS)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
        <dt class = "col-sm-2">
            Entró el
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Entrada)
        </dd>
        <dt class = "col-sm-2">
            Salió el
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salida)
        </dd>
        <dt class = "col-sm-2">
            Creado el
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class="col-sm-2">
            Modificado el
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaModificado)
        </dd>
    </dl>
</div>
<div class="btn-group btn-group-sm">
    @{
        var editarDis = (@Model.Salida != null) ? "disabled" : "";
    }

    <a asp-action="Edit" class="btn btn-dark @editarDis" asp-route-id="@Model?.Id">
        <i class="fa-solid fa-pen-to-square"></i>Editar
    </a>

    <a asp-action="Index" class="btn" style="color: #ffffff;background-color: #17487A;" asp-route-id="@Model?.Id">
        <i class="fa-solid fa-list"></i>Regresar
    </a>
</div>
